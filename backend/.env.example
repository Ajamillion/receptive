# Picovoice Cheetah streaming speech-to-text key
CHEETAH_ACCESS_KEY=changeme

# Google AI Studio key for Gemini 1.5 Flash
GEMINI_API_KEY=AIza...

# Firebase Realtime Database root URL (no trailing slash)
FIREBASE_RTDB_URL=https://your-project-id.firebaseio.com

# Optional: database secret or custom token for REST writes
FIREBASE_DB_SECRET=

# Optional safety rails for free-tier usage (minutes)
FREE_TIER_GUARD=true
FREE_TIER_MAX_MINUTES=5400

# Optional: restrict CORS for dashboard requests (comma-separated)
ALLOWED_ORIGINS=https://your-site.web.app

# Google Calendar integration (service account must have access to this calendar)
CALENDAR_ID=primary
# Provide credentials via inline JSON (or leave blank and set GOOGLE_APPLICATION_CREDENTIALS instead)
GOOGLE_SERVICE_ACCOUNT_INFO=

# Cloud Run injects PORT; override for local dev
PORT=8080
